# Verifies that all example xml files are compliant with XSD schema definition
# You must install xmllint first!

xmllint --schema xsd/categories.xsd examples/categories.xml --noout
xmllint --schema xsd/products.xsd examples/products.xml --noout
xmllint --schema xsd/contacts.xsd examples/contacts.xml --noout
xmllint --schema xsd/orders.xsd examples/orders.xml --noout
xmllint --schema xsd/couponTypes.xsd examples/couponTypes.xml --noout
xmllint --schema xsd/coupons.xsd examples/coupons.xml --noout
xmllint --schema xsd/info.xsd examples/info.xml --noout
